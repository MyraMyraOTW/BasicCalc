<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcActivity"
    android:weightSum="6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@android:color/darker_gray">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/history"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:gravity="center_vertical|right"
                    android:text="@string/histhint"
                    android:textColor="@android:color/holo_red_dark" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/hint"
                    android:id="@+id/results"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="10dp"
                    android:paddingTop="0dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp"
                    android:textSize="50dp"
                    android:textColor="@android:color/black"
                    android:allowUndo="false"
                    android:singleLine="true"
                    android:lines="1"
                    android:hint="@string/hint"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".2">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".51"
                    android:background="@android:color/holo_red_light"></LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:layout_weight=".05"
                    android:layout_gravity="center_vertical">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/MemC"
                        android:layout_weight="1"
                        android:text="@string/MC"
                        android:allowUndo="false"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/MemN"
                        android:layout_weight="1"
                        android:text="@string/Mm"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/MemP"
                        android:layout_weight="1"
                        android:text="@string/Mp"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/PMC"
                        android:layout_weight="1"
                        android:text="@string/pm"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Cclear"
                        android:layout_weight="1"
                        android:text="@string/clr"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B7"
                        android:layout_weight=".73"
                        android:text="@string/B7"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B8"
                        android:layout_weight=".73"
                        android:text="@string/B8"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B9"
                        android:layout_weight=".73"
                        android:text="@string/B9"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/BBack"
                        android:layout_weight="2.8"
                        android:text="@string/back"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B4"
                        android:layout_weight="1"
                        android:text="@string/B4"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B5"
                        android:layout_weight="1"
                        android:text="@string/B5"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B6"
                        android:layout_weight="1"
                        android:text="@string/B6"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Btimes"
                        android:layout_weight="1"
                        android:text="@string/times"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Bdiv"
                        android:layout_weight="1"
                        android:text="@string/div"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B1"
                        android:layout_weight="1"
                        android:text="@string/B1"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B2"
                        android:layout_weight="1"
                        android:text="@string/B2"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B3"
                        android:layout_weight="1"
                        android:text="@string/B3"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Bplus"
                        android:layout_weight="1"
                        android:text="@string/plus"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Bminus"
                        android:layout_weight="1"
                        android:text="@string/minus"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B0"
                        android:layout_weight=".73"
                        android:text="@string/B0"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/B00"
                        android:layout_weight=".73"
                        android:text="@string/B00"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Bpoint"
                        android:layout_weight=".73"
                        android:text="@string/Bpoint"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="20dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/Bequal"
                        android:layout_weight="2.8"
                        android:text="@string/equals"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>
